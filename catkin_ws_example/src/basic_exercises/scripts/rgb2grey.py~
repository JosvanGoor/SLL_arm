#!/usr/bin/env python

from sensor_msgs import *
from basic_exercises.srv import *
import rospy

def convert_rgb_2_grey (img):
    res=Image()
    res.header=img.header;
    res.height=img.height;
    res.width=img.width;
    res.encoding = "mono8";
    res.is_bigendian = img.is_bigendian;
    res.step=res.width;
    res.data= [];
    
    for(i in range(res.height*res.width)):
        start=i*3;
        res.data.append(0.2989*img.data[start]+0.5870*img.data[start+1]+0.1140*img.data[start+2]);

    return res;

def rgb_server():
    rospy.init_node('rgb_server');
    s = rospy.Service('rgb',rgb2grey,convert_rgb_2_grey);
    print "ready to convert";
    rospy.spin();

if __name__ == "__main__":
    rgb_server();


